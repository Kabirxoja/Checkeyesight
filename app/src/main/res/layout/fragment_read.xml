<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bluetoothconnect.ReadFragment"
    tools:layout_editor_absoluteY="81dp"

    >

    <Button
        android:id="@+id/btnListen"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_background_selected"
        android:text="Listen"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignStart="@id/tvStatus"

        />




    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="start"
        android:textSize="14sp"
        android:layout_below="@id/type_test"
        android:layout_marginStart="16dp"
        />


    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_background_unselected"
        android:text="Status"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/type_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#363A43"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvStatus"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        />


    <ImageView
        android:id="@+id/iv_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


</RelativeLayout>