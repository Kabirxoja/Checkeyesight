<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_astigmatism_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    tools:context=".astigmatism.AstigmatismTest"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/image_astigmatism"
        android:layout_width="48mm"
        android:layout_height="48mm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"


        />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/astigmatism_picture"
        android:textSize="24sp"
        android:textColor="@color/dark_night"
        app:layout_constraintBottom_toTopOf="@+id/btn_yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background_unselected"
        android:paddingHorizontal="12dp"
        android:text="@string/same_line"
        android:textColor="@color/dark_night"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_no"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_background_unselected"
        android:paddingHorizontal="12dp"
        android:text="@string/blurry_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_yes"
        android:textColor="@color/dark_night"
        android:textSize="18sp"
        android:textStyle="bold"

        />


</androidx.constraintlayout.widget.ConstraintLayout>