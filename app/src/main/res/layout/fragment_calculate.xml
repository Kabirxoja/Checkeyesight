<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_night"
    tools:context=".calculate.Calculate">


    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/result2"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_background_unselected"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/btn_first"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@id/image_first"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:text="@string/conversion_table"
            android:textColor="@color/dark_and_light"
            android:textSize="16sp"


            />

        <ImageView
            android:id="@+id/image_first"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="6dp"
            android:padding="2dp"
            android:src="@drawable/ic_conversion_table"

            />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/increase"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="LogMar"
        android:textColor="@color/white"
        android:layout_alignLeft="@id/text_result"
        android:layout_alignRight="@id/text_result"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/result2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView6"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="@string/recommended_glasses"
        android:textColor="@color/white"
        android:layout_marginEnd="32dp"
        android:textSize="18sp"

        />

    <ImageButton
        android:id="@+id/increase"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_above="@id/text_result"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_background_unselected"
        android:backgroundTint="@color/dark_night"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_plus" />

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:text="@string/n_a"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_alignEnd="@id/result2"
        android:layout_alignStart="@id/result2"

        />


    <ImageButton
        android:id="@+id/decrease"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/text_result"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/dark_night"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_minus"
        android:background="@drawable/btn_background_unselected"
        />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_background_unselected"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="00"
        android:textColor="@color/dark_and_light"
        android:textSize="36sp"

        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/text_result"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/text_view_result"
        android:src="@drawable/back"
        android:rotation="180"
        />


</RelativeLayout>