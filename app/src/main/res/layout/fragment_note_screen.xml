<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_night"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".note.NoteScreen"

    >

    <Button
        android:id="@+id/delete_alarm"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginVertical="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_background_selected"
        android:drawableEnd="@drawable/calendar_delete"
        android:maxWidth="240dp"
        android:maxHeight="0dp"
        android:minWidth="120dp"
        android:minHeight="36dp"
        android:paddingEnd="12dp"
        android:text="Delete Alarm"
        android:textColor="@color/white"
        android:textSize="14sp"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bac_with_corner"

        >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/set_clock"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#279494"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/set_clock"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_background_selected"
            android:maxWidth="240dp"
            android:maxHeight="0dp"
            android:minWidth="120dp"
            android:minHeight="36dp"
            android:text="set clock"
            android:textColor="@color/white"
            android:textSize="14sp"


            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bac_with_corner"

        >

        <TextView
            android:id="@+id/week_day_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="Mon/"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_day_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/week_day_monday"
            android:text="Tues/"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/week_day_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/week_day_tuesday"
            android:text="Wed/"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_day_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/week_day_wednesday"
            android:text="Thurs/"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_day_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/week_day_thursday"
            android:text="Fri/"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_day_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/week_day_friday"
            android:text="Sun/"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/week_day_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/week_day_saturday"
            android:text="Sun"
            android:textSize="14sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/dialog"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_background_selected"
            android:maxWidth="240dp"
            android:maxHeight="0dp"
            android:minWidth="120dp"
            android:minHeight="36dp"
            android:text="set days"
            android:textColor="@color/white"
            android:textSize="14sp"

            />

    </RelativeLayout>


    <TextView
        android:id="@+id/text_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bac_with_corner"

        >

        <TimePicker
            android:id="@+id/tp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="58dp"
            />

        <Button
            android:id="@+id/set_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tp1"
            android:layout_marginHorizontal="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_background_unselected"
            android:text="set clock" />
    </RelativeLayout>


</LinearLayout>