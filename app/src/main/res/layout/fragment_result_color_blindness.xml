<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".colorblindness.ResultColorBlindness"
    android:background="@color/dark_night"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/final_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

    <TextView
        android:id="@+id/final_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:textColor="@color/white"
        android:text="TEST javobi "
        android:textSize="24sp"
        />

    <LinearLayout
        android:id="@+id/to_home"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/bg_tab_unselected"
        android:orientation="horizontal"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/final_result">

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/icon_house"
            android:backgroundTint="@color/dark_and_light"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/home"
            android:textColor="@color/dark_and_light"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"


            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>